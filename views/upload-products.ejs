      <% if (productArray.length > 0) { %>
        <h2>Uploaded Products:</h2>
        <ul>
          <% productArray.forEach(product => { %>
            <li>
              <img src="<%= product.pImage %>" alt="<%= product.pName %>" width="100" height="100">
